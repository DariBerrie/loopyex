<div class="container">
  <div class="row justify-content-center">
  </div>

  <div class="header-div">
  <%= image_tag @user.photo, class: "rounded-circle", atl: "...", style:"width:200px; height:200px; object-fit:cover;" %>
  <h3><%= @user.first_name %></h3>
  <div class="user-star-rating">
    <span class="fs-3 ms-2"><% 5.times do %><i class="fa-solid fa-star text-warning"></i><% end %></span>
  </div>
  <hr>
  <h1 class="header">
    <% if @user == current_user %>
      <%= "My Stash" %>
    <% else %>
      <%= "View #{@user.first_name}'s Stash" %>
    <% end %>
  </h1>
  </div>
  <div class="cards d-flex flex-wrap justify-content-center" style="grid-template-columns: 1fr 1fr 1fr 1fr;">
    <% @user_products.each do |product| %>
      <%= render 'shared/profile_card', product: product %>
    <% end %>
  </div>

</div>
