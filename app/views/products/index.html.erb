<div class="container">
  <%# Search %>

  <div class="row justify-content-center">
  <div class="col-lg-6">
    <%= form_with url: products_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for yarn..."
      %>
      <%= submit_tag "Yarn it!", class: "btn btn-primary" %>
    <% end %>
  </div>
  </div>

  <div class="header-div"><h1 class="header">Yarns curated for you</h1>
  </div>
    <div class="cards">
      <% @products = @products.order(created_at: :desc) %>
      <% @products.each do |product| %>
        <%= render 'shared/card', product: product %>
      <% end %>
    </div>

  <%# Map div %>
    <div style="width: 100%; height: 600px; margin-top: 40px; border-radius: 1rem;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
