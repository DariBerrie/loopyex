<div class="container">
  <%# Search %>

  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for yarn...">
        <span class="input-group-btn">
          <button class="btn btn-primary" type="button">Yarn it!</button>
        </span>
      </div>
    </div>
  </div>

  <div class="header-div"><h1 class="header">Yarns curated for you</h1>
  </div>
    <div class="cards">
      <% @products = Product.order(created_at: :desc) %>
      <% @products.each do |product| %>
        <%= render 'shared/card', product: product %>
      <% end %>
    </div>

  <%# Map div %>
    <div style="width: 100%; height: 600px; margin-top: 40px; border-radius: 1rem;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
