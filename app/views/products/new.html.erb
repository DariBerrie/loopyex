<div class="new-product-form">
  <div class = 'form-container rounded-4'>
    <div class = 'container-relative'>
      <img src="https://images.unsplash.com/photo-1588676006059-956f7751dc31?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1974&q=80"
      class="img rounded-4 " alt="..." >
      <div class="text-box">
        <h2>Add new product</h2>
      </div>
    </div>

    <div>
      <%= simple_form_for(@product) do |f| %>
        <div class="form-input">
          <%= f.input :name %>
          <%= f.input :brand %>
          <%= f.input :price %>
          <%= f.input :quantity %>
          <%= f.input :material %>
          <%= f.input :photo, as: :file %>
        </div>
        <%= f.submit 'Add product', class: "btn-gray" %>
      <% end %>
    </div>
  </div>
</div>
